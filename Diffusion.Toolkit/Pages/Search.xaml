<Page x:Class="Diffusion.Toolkit.Pages.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diffusion.Toolkit.Pages"
      xmlns:models="clr-namespace:Diffusion.Toolkit.Models"
      xmlns:toolkit="clr-namespace:Diffusion.Toolkit"
      xmlns:classes="clr-namespace:Diffusion.Toolkit.Classes"
      xmlns:controls="clr-namespace:Diffusion.Toolkit.Controls"
      xmlns:converters="clr-namespace:Diffusion.Toolkit.Converters"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance models:SearchModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="615" d:DesignWidth="800"
      Title="Search">
    <Page.Resources>


        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="boolToVis"></converters:BoolToVisibilityConverter>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacity"></converters:BoolToOpacityConverter>
        </ResourceDictionary>
        <!--<DataTemplate DataType="{x:Type toolkit:ImageEntry}">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Image Source="{Binding Thumbnail}" Height="128" Width="128" MaxWidth="128" MaxHeight="128" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                <TextBlock Text="{Binding FileName}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MaxWidth="128"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=(toolkit:MyScrollViewer.IsInViewport), RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"
                         Value="True">
                    <Setter  TargetName="Thumbnail" Property="Source" Value="{Binding Thumbnail}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>-->
    </Page.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrush}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" ColumnSpan="3" Margin="2">
            <ComboBox x:Name="SearchTermTextBox" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     ItemsSource="{Binding SearchHistory}"
                     IsEditable="True"
                     Padding="5,0,0,0"
                     HorizontalAlignment="Stretch" 
                     VerticalContentAlignment="Center">
                <ComboBox.InputBindings>
                    <KeyBinding Command="{Binding SearchCommand}" Key="Return" CommandParameter="ManualSearch" />
                </ComboBox.InputBindings>
            </ComboBox>
            <TextBlock IsHitTestVisible="False" 
                       Text="{Binding SearchHint}" FontStyle="Italic" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       Padding="8,0,0,0" Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Visibility="{Binding IsEmpty, Converter={StaticResource boolToVis}}" 
                   Content="{Binding ResultStatus}"
                   VerticalContentAlignment="Center" 
                   HorizontalContentAlignment="Center" 
                   FontSize="20" FontWeight="DemiBold" 
                   Foreground="DarkGray"></Label>
            <ListView x:Name="ThumbnailListView" Margin="2" Padding="10" ItemsSource="{Binding Images, NotifyOnTargetUpdated=True}"
                      SelectedItem="{Binding SelectedImageEntry}" 
                      KeyDown="UIElement_OnKeyDown"
                      MouseDoubleClick="Control_OnMouseDoubleClick"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <ListView.Template>
                    <ControlTemplate>
                        <controls:MyScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <WrapPanel IsItemsHost="True" />
                        </controls:MyScrollViewer>
                    </ControlTemplate>
                </ListView.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate  DataType="{x:Type toolkit:ImageEntry}">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Border CornerRadius="5" BorderBrush="LightGray" BorderThickness="2" Height="128" Width="128">
                                <Grid>
                                    <controls:Thumbnail 
                                        Source="{Binding Thumbnail, IsAsync = True}" 
                                        Opacity="{Binding Path=ForDeletion, Converter={StaticResource BoolToOpacity}}"
                                        Height="128" Width="128" 
                                        MaxWidth="128" MaxHeight="128" 
                                        MouseMove="UIElement_OnMouseMove"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Top" />
                                    <Image Height="32" Width="32" Source="../Icons/x-mark-32.png" Visibility="{Binding ForDeletion, Converter={StaticResource boolToVis}}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <!--<DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=(toolkit:MyScrollViewer.IsInViewport), RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}"
                                         Value="True">
                                <Setter TargetName="Thumbnail" Property="Source" Value="{Binding Thumbnail}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="1" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         Content="{Binding Results}"
                ></Label>
                <Button Grid.Column="1" x:Name="PrevPage" Click="PrevPage_OnClick">&lt;&lt;</Button>
                <TextBox Grid.Column="2"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         KeyDown="Page_OnKeyDown"
                         Text="{Binding Page, UpdateSourceTrigger=PropertyChanged}"
                ></TextBox>
                <Label Grid.Column="3"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Content="of"
                ></Label>
                <Label Grid.Column="4"  
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Stretch" 
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Content="{Binding Pages}"
                ></Label>
                <Button Grid.Column="5" x:Name="NextPage" Click="NextPage_OnClick">&gt;&gt;</Button>
            </Grid>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="1"
                      
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Width="3"
        />

        <Grid DataContext="{Binding CurrentImage}" Grid.Row="1" Grid.Column="2" Background="DarkGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Image Margin="2" Grid.Row="0" Source="{Binding Image}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
                <Canvas>
                    <Image Height="32" Width="32" Source="../Icons/blue-heart-32.png" Visibility="{Binding Path=Favorite, Converter={StaticResource boolToVis}}"></Image>
                </Canvas>
            </Grid>

            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          ShowsPreview="True"
                          Height="3"
            />
            <Grid Grid.Row="2" Background="AliceBlue" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="26"/>
                </Grid.RowDefinitions>
                <ScrollViewer  Margin="2" Padding="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Path</Label>
                            <Button Grid.Column="1"  Command="{Binding OpenInExplorerCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/link-32.png" Height="16" Width="16" ToolTip="Show in Explorer"></Image>
                            </Button>
                            <Button Grid.Column="2"  Command="{Binding CopyPathCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding Path=Path}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Prompt</Label>
                            <Button Grid.Column="1"  Command="{Binding CopyPromptCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding Prompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Negative Prompt</Label>
                            <Button Grid.Column="1"  Command="{Binding CopyNegativePromptCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding NegativePrompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Others</Label>
                            <!--<Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>-->
                        </Grid>

                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding OtherParameters}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                <Button Grid.Row="1" Command="{Binding CopyParameters}">Copy Parameters</Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" ColumnSpan="3">
            <ProgressBar Value="{Binding CurrentPosition}" Maximum="{Binding TotalFiles}"></ProgressBar>
            <ProgressBar Value="{Binding CurrentPositionScan}" Maximum="{Binding TotalFilesScan}"></ProgressBar>
            <Label Content="{Binding Status}"></Label>
        </Grid>
    </Grid>
</Page>
 