<Page x:Class="Diffusion.Toolkit.Pages.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diffusion.Toolkit.Pages"
      xmlns:models="clr-namespace:Diffusion.Toolkit.Models"
      xmlns:toolkit="clr-namespace:Diffusion.Toolkit"
      xmlns:classes="clr-namespace:Diffusion.Toolkit.Classes"
      xmlns:controls="clr-namespace:Diffusion.Toolkit.Controls"
      xmlns:converters="clr-namespace:Diffusion.Toolkit.Converters"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance models:SearchModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="615" d:DesignWidth="800"
      Title="Search">
    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="boolToVis"></converters:BoolToVisibilityConverter>
        </ResourceDictionary>
        <!--<DataTemplate DataType="{x:Type toolkit:ImageEntry}">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Image Source="{Binding Thumbnail}" Height="128" Width="128" MaxWidth="128" MaxHeight="128" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                <TextBlock Text="{Binding FileName}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MaxWidth="128"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=(toolkit:MyScrollViewer.IsInViewport), RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"
                         Value="True">
                    <Setter  TargetName="Thumbnail" Property="Source" Value="{Binding Thumbnail}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>-->
    </Page.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrush}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" ColumnSpan="3" Margin="2">
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                </TextBox.InputBindings>
            </TextBox>
        </Grid>
        <GridSplitter Grid.Row="1" Grid.Column="1"
                      
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Width="3"
        />
        <Grid Grid.Row="1" Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Visibility="{Binding IsEmpty, Converter={StaticResource boolToVis}}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" Foreground="DarkGray">No items found</Label>
            <ListView x:Name="ThumbnailListView" Margin="2" Padding="10" ItemsSource="{Binding Images, NotifyOnTargetUpdated=True}"
                      SelectedItem="{Binding SelectedImageEntry}" 
                      KeyDown="UIElement_OnKeyDown"
                      MouseDoubleClick="Control_OnMouseDoubleClick"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <ListView.Template>
                    <ControlTemplate>
                        <controls:MyScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <WrapPanel IsItemsHost="True" />
                        </controls:MyScrollViewer>
                    </ControlTemplate>
                </ListView.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate  DataType="{x:Type toolkit:ImageEntry}">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Border CornerRadius="5" BorderBrush="LightGray" BorderThickness="2" Height="128" Width="128">
                                <controls:Thumbnail Source="{Binding Thumbnail, IsAsync = True}" Height="128" Width="128" MaxWidth="128" MaxHeight="128" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
                            </Border>
                        </StackPanel>
                        <!--<DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=(toolkit:MyScrollViewer.IsInViewport), RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}"
                                         Value="True">
                                <Setter TargetName="Thumbnail" Property="Source" Value="{Binding Thumbnail}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="1" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         Content="{Binding Results}"
                ></Label>
                <Button Grid.Column="1" x:Name="PrevPage" Click="PrevPage_OnClick">&lt;&lt;</Button>
                <TextBox Grid.Column="2"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         KeyDown="Page_OnKeyDown"
                         Text="{Binding Page, UpdateSourceTrigger=PropertyChanged}"
                ></TextBox>
                <Label Grid.Column="3"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Content="of"
                ></Label>
                <Label Grid.Column="4"  
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Stretch" 
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Content="{Binding Pages}"
                ></Label>
                <Button Grid.Column="5" x:Name="NextPage" Click="NextPage_OnClick">&gt;&gt;</Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Background="DarkGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Margin="2" Grid.Row="0" Source="{Binding SelectedImage}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          ShowsPreview="True"
                          Height="3"
            />
            <Grid Grid.Row="2" Background="AliceBlue" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="26"/>
                </Grid.RowDefinitions>
                <ScrollViewer  Margin="2" Padding="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding SelectedImageEntry}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Path</Label>
                            <Button Grid.Column="1"  Command="{Binding Path=DataContext.CopyPathCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Page, AncestorLevel=1}}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding FileParameters.Path}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Prompt</Label>
                            <Button Grid.Column="1"  Command="{Binding Path=DataContext.CopyPromptCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Page, AncestorLevel=1}}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding FileParameters.Prompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Negative Prompt</Label>
                            <Button Grid.Column="1"  Command="{Binding Path=DataContext.CopyNegativePromptCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Page, AncestorLevel=1}}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding FileParameters.NegativePrompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label>Others</Label>
                            <!--<Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>-->
                        </Grid>

                        <Border BorderThickness="5" >
                            <TextBox IsReadOnly="True" Text="{Binding FileParameters.OtherParameters}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                <Button Grid.Row="1" Command="{Binding CopyParameters}">Copy Parameters</Button>
            </Grid>
        </Grid>
        <!--<Grid Grid.Row="1" Background="AliceBlue">
            <StackPanel>
                <Label>Prompt</Label>
                <Label>Negative Prompt</Label>
                <Label>Negative Prompt</Label>
            </StackPanel>

        </Grid>-->
        <Grid Grid.Row="2" ColumnSpan="3">
            <ProgressBar Value="{Binding CurrentPosition}" Maximum="{Binding TotalFiles}"></ProgressBar>
            <ProgressBar Value="{Binding CurrentPositionScan}" Maximum="{Binding TotalFilesScan}"></ProgressBar>
            <Label Content="{Binding Status}"></Label>
        </Grid>
    </Grid>
</Page>
 