                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>-->
    </Page.Resources>
    <Grid x:Name="MainGrid" Background="{DynamicResource {x:Static SystemColors.ControlBrush}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid  Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label FontSize="24" FontWeight="DemiBold" Content="{Binding ModeName}"></Label>
            </Grid>
            <Grid Grid.Row="1" Margin="2">
                <ComboBox x:Name="SearchTermTextBox" 
                          Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                          ItemsSource="{Binding SearchHistory}"
                          PreviewKeyDown="SearchTermTextBox_OnPreviewKeyDown"
                          SelectionChanged="SearchTermTextBox_OnSelectionChanged"
                          IsEditable="True"
                          Padding="5,0,0,0"
                          HorizontalAlignment="Stretch" 
                          VerticalContentAlignment="Center">
                    <ComboBox.InputBindings>
                        <KeyBinding Command="{Binding HideDropDown}" Key="Escape" />
                        <KeyBinding Command="{Binding SearchCommand}" Key="Return" CommandParameter="ManualSearch" />
                    </ComboBox.InputBindings>
                </ComboBox>
                <TextBlock IsHitTestVisible="False" 
                           Text="{Binding SearchHint}" FontStyle="Italic" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Padding="8,0,0,0" Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <Label Grid.Row="2" Visibility="{Binding IsEmpty, Converter={StaticResource boolToVis}}" 
                   Style="{StaticResource TitleText}"
                   Content="{Binding ResultStatus}"
                   VerticalContentAlignment="Center" 
                   HorizontalContentAlignment="Center" 
            ></Label>
            <ListView Grid.Row="2" x:Name="ThumbnailListView" Margin="2" Padding="10" ItemsSource="{Binding Images, NotifyOnTargetUpdated=True}"
                      SelectionMode="Extended"
                      SelectedItem="{Binding SelectedImageEntry}" 
                      KeyDown="UIElement_OnKeyDown"
                      PreviewMouseLeftButtonDown="ThumbnailListView_OnPreviewMouseLeftButtonDown"
                      MouseDown="ThumbnailListView_OnMouseDown"
                      MouseMove="ThumbnailListView_OnMouseMove"
                      MouseDoubleClick="Control_OnMouseDoubleClick"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Name="Border" Padding="2" SnapsToDevicePixels="true">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter TargetName="Border" Property="Background"
                                                    Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>
                <ListView.InputBindings>
                    <KeyBinding Command="{Binding PrevPage}" Key="PageUp" Modifiers="Alt"  Gesture="ALT+PageUp"></KeyBinding>
                    <KeyBinding Command="{Binding NextPage}"  Key="PageDown" Modifiers="Alt" Gesture="ALT+PageDown"></KeyBinding>
                    <KeyBinding Command="{Binding FirstPage}"  Key="Home" Modifiers="Alt" Gesture="ALT+Home"></KeyBinding>
                    <KeyBinding Command="{Binding LastPage}"  Key="End" Modifiers="Alt" Gesture="ALT+End"></KeyBinding>
                    <KeyBinding Command="{Binding Refresh}" Key="F5" Modifiers="Control"  Gesture="Control+F5"></KeyBinding>
                    <KeyBinding Command="{Binding FocusSearch}" Key="F6" Gesture="F6"></KeyBinding>
                </ListView.InputBindings>
                <ListView.Template>
                    <ControlTemplate >
                        <controls:MyScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Background="Transparent">
                            <WrapPanel IsItemsHost="True" />
                        </controls:MyScrollViewer>
                    </ControlTemplate>
                </ListView.Template>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Background="Transparent" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate  DataType="{x:Type toolkit:ImageEntry}">
                        <Border CornerRadius="5" BorderBrush="LightGray" BorderThickness="2" Height="128" Width="128" Margin="12" >
                            <Grid>
                                <controls:Thumbnail 
                                        Source="{Binding Thumbnail, IsAsync = True}" 
                                        Opacity="{Binding Path=ForDeletion, Converter={StaticResource BoolToOpacity}}"
                                        Height="128" Width="128" 
                                        MaxWidth="128" MaxHeight="128" 
                                     
                                        HorizontalAlignment="Stretch" VerticalAlignment="Top">

                                    <!--<controls:Thumbnail.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Favorite (F)" ToolTip="F"/>
                                            <Separator />
                                            <MenuItem Header="Copy prompt" />
                                            <MenuItem Header="Copy negative prompt" />
                                            <MenuItem Header="Copy all parameters" />
                                            <Separator />
                                            <MenuItem Header="Show in explorer" />
                                            <Separator />
                                            <MenuItem Header="Add to Album" />
                                            <MenuItem Header="Remove from Album" />
                                            <Separator />
                                            <MenuItem Visibility="{Binding ForDeletion, Converter={StaticResource invBoolToVisCol}}" Header="Send to Trash (Del)" ToolTip="Del"/>
                                            <MenuItem Visibility="{Binding ForDeletion, Converter={StaticResource boolToVisCol}}" Header="Restore (Del)" ToolTip="Del"/>
                                            <MenuItem Header="Delete immediately (ShiftDel)" ToolTip="Shift+Del" />
                                        </ContextMenu>
                                    </controls:Thumbnail.ContextMenu>-->

                                </controls:Thumbnail>
                                <!--Margin="96,96,0,0"-->
                                <Image IsHitTestVisible="False" Height="24" Width="24" Margin="0,96,96,0" Source="../Icons/blue-heart-32.png" Visibility="{Binding Favorite, Converter={StaticResource boolToVis}}">
                                    <Image.Effect>
                                        <DropShadowEffect BlurRadius="3" Opacity="0.8"  ShadowDepth="4" Direction="-90" RenderingBias="Quality" />
                                    </Image.Effect>
                                </Image>
                                <!--<Image IsHitTestVisible="False" Height="24" Width="24" Margin="0,96,72,0" Source="../Icons/star-32.png"/>
                                    <Label FontWeight="Bold" IsHitTestVisible="False" Height="24" Width="24" Margin="0,96,72,0" Content="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center"></Label>-->
                                <!--<Image IsHitTestVisible="False" Height="32" Width="32" Source="../Icons/x-mark-32.png" Visibility="{Binding ForDeletion, Converter={StaticResource boolToVis}}"/>-->
                            </Grid>
                        </Border>
                        <!--<DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=(toolkit:MyScrollViewer.IsInViewport), RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}"
                                         Value="True">
                                <Setter TargetName="Thumbnail" Property="Source" Value="{Binding Thumbnail}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"  
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         VerticalContentAlignment="Center"
                         Content="{Binding Results}"
                ></Label>
                <StackPanel Grid.Column="1"   Orientation="Horizontal">
                    <Button IsEnabled="{Binding FirstPageEnabled}" ToolTip="ALT+Home" Click="FirstPage_OnClick">|&lt;</Button>
                    <Button IsEnabled="{Binding PrevPageEnabled}" ToolTip="ALT+PageUp" Click="PrevPage_OnClick">&lt;&lt;</Button>
                    <TextBox  
                        MinWidth="30"
                             VerticalAlignment="Stretch" 
                             HorizontalAlignment="Stretch" 
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             KeyDown="Page_OnKeyDown"
                             Text="{Binding Page, UpdateSourceTrigger=PropertyChanged}"
                    ></TextBox>
                    <Label
                           VerticalAlignment="Stretch" 
                           HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Content="of"
                    ></Label>
                    <Label   
                            MinWidth="30"
                           VerticalAlignment="Stretch" 
                           HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Content="{Binding Pages}"
                    ></Label>
                    <Button IsEnabled="{Binding NextPageEnabled}" ToolTip="ALT+PageDown" Click="NextPage_OnClick">&gt;&gt;</Button>
                    <Button IsEnabled="{Binding LastPageEnabled}" ToolTip="ALT+End" Click="LastPage_OnClick">&gt;|</Button>
                </StackPanel>
            </Grid>
        </Grid>

        <GridSplitter Grid.Row="0" Grid.Column="1"
                      
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Width="5"
        />

        <Grid x:Name="PreviewGrid" DataContext="{Binding CurrentImage}" Grid.Row="0" Grid.Column="2" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid  Style="{StaticResource Preview}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0"  Grid.RowSpan="3" Source="{Binding Image}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
                <Grid Visibility="Visible" Grid.Row="0" RowSpan="3"  Margin="10" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1" Margin="10" Background="Transparent">
                            <Grid Margin="-20" Background="Transparent"></Grid>
                            <StackPanel>
                                <TextBox Foreground="White" FontSize="14" BorderThickness="0"
                                         IsReadOnly="True"
                                         Padding="5" Background="#5F000000" TextWrapping="WrapWithOverflow" Text="{Binding Prompt}"></TextBox>
                                <TextBox Foreground="White" FontSize="14" BorderThickness="0"
                                         IsReadOnly="True" Padding="5" Background="#5F000000" TextWrapping="WrapWithOverflow" Text="{Binding NegativePrompt}"></TextBox>
                                <TextBox Foreground="White" FontSize="14" BorderThickness="0"
                                         IsReadOnly="True" Padding="5" Background="#5F000000" TextWrapping="WrapWithOverflow" Text="{Binding OtherParameters}"></TextBox>
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" >
                            <Image Height="32" Width="32" Source="../Icons/blue-heart-32.png" Visibility="{Binding Path=Favorite, Converter={StaticResource boolToVisCol}}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>

                            <Image Height="32" Width="32" Source="../Icons/star-32.png" Visibility="{Binding Path=Rating, Converter={StaticResource intToVis}, ConverterParameter=1}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>

                            <Image Height="32" Width="32" Source="../Icons/star-32.png" Visibility="{Binding Path=Rating, Converter={StaticResource intToVis}, ConverterParameter=2}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>

                            <Image Height="32" Width="32" Source="../Icons/star-32.png" Visibility="{Binding Path=Rating, Converter={StaticResource intToVis}, ConverterParameter=3}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>
                            <Image Height="32" Width="32" Source="../Icons/star-32.png" Visibility="{Binding Path=Rating, Converter={StaticResource intToVis}, ConverterParameter=4}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>

                            <Image Height="32" Width="32" Source="../Icons/star-32.png" Visibility="{Binding Path=Rating, Converter={StaticResource intToVis}, ConverterParameter=5}">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.8"  ShadowDepth="6" Direction="-90" RenderingBias="Quality" />
                                </Image.Effect>
                            </Image>

                        </StackPanel>
                    </Grid>
                </Grid>
             
            </Grid>

            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          ShowsPreview="True"
                          Height="5"
            />
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="26"/>
                </Grid.RowDefinitions>
                <ScrollViewer  Margin="2" Padding="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Path</Label>
                            <Button Style="{DynamicResource BorderlessButton}" Grid.Column="1" Command="{Binding OpenInExplorerCommand}">
                                <Image Source="{DynamicResource LinkIcon}" Height="16" Width="16" ToolTip="Show in Explorer"></Image>
                            </Button>
                            <Button Style="{DynamicResource BorderlessButton}" Grid.Column="2"  Command="{Binding CopyPathCommand}">
                                <Image Source="{DynamicResource CopyIcon}" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding Path=Path}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Prompt</Label>
                            <Button Grid.Column="1"  Command="{Binding CopyPromptCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="{DynamicResource CopyIcon}" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding Prompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Negative Prompt</Label>
                            <Button Grid.Column="1" Command="{Binding CopyNegativePromptCommand}" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="{DynamicResource CopyIcon}" Height="16" Width="16" ToolTip="Copy to clipboard"></Image>
                            </Button>
                        </Grid>
                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding NegativePrompt}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Others</Label>
                            <!--<Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>-->
                        </Grid>

                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding OtherParameters}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Model Name</Label>
                            <!--<Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>-->
                        </Grid>

                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding ModelName}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Label FontWeight="SemiBold">Date</Label>
                            <!--<Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent">
                                <Image Source="../Icons/copy-32.png" Height="16" Width="16"></Image>
                            </Button>-->
                        </Grid>

                        <Border BorderThickness="5" >
                            <TextBox Padding="5" BorderBrush="Transparent" Background="{DynamicResource ControlBackgroundBrush}" IsReadOnly="True" Text="{Binding Date}" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto"></TextBox>
                        </Border>


                    </StackPanel>
                </ScrollViewer>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Command="{Binding ShowInThumbnails}">Show in Thumbnails</Button>
                    <Button Grid.Column="1" Command="{Binding CopyParameters}">Copy Parameters</Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
 