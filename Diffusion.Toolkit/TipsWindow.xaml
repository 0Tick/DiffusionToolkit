<Window x:Class="Diffusion.Toolkit.TipsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diffusion.Toolkit"
        xmlns:mdXaml="clr-namespace:MdXaml;assembly=MdXaml"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="Getting Started" Height="600" Width="800">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <RichTextBox Padding="20" BorderBrush="Transparent" x:Name="RichTextBox" IsReadOnly="True" IsDocumentEnabled="True" VerticalScrollBarVisibility="Auto"></RichTextBox>
        <Button Grid.Row="1" Width="160" Click="ButtonBase_OnClick">View Help Online</Button>
    </Grid>
</Window>
